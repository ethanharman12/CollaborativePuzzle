@model GameViewModel
@{
    ViewData["Title"] = "New Game";
}

<h1>New Game</h1>

<form asp-action="Create" asp-controller="Game" enctype="multipart/form-data">
    <h3>Picture</h3>
    <div class="row">
        <div class="form-group col-md-2">
            <label>Upload Image or Video:</label>
            <br />
            <input type='file' id="imageFile" name="imageFile" style="width:inherit"/>
        </div>
        <div class="form-group col-md-2">
            <label>Random GIF:</label>
            <br />
            <input type="text" id="giphySearchParameter" name="giphySearchParameter" autocomplete="off" placeholder="Search Text" />
            <br />
            <button type="button" id="giphyButton">Giphy</button>
            <button type="button" id="stickerButton">Giphy Sticker</button>
            <input type="hidden" id="giphyUrl" name="giphyUrl" />
        </div>
        <div class="form-group col-md-2">
            <label>Link to Image or GIF:</label>
            <br />
            <input type='text' id="linkUrl" name="linkUrl" placeholder="http://example.com/test.jpg" />
        </div>
        <div class="col-md-3">
            <img id="imagePreview" src="#" alt="your image" style="display:none;width:300px;height:300px;" />
            <video loop id="videoPreview" autoplay width="300" height="300" style="display:none;">
                <source src="" />
            </video>
            <video autoplay loop id="giphy" style="display:none;width:300px;height:300px;">
                <source id="giphySource" src="https://media1.giphy.com/media/kzyR9Mzm3eICaPj4ow/giphy.mp4?cid=e3b0c4426965a7b978dfd1aa9abdd9c932698b60086676c8&rid=giphy.mp4" />
            </video>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-1">
        </div>

        <div class="form-group col-md-3">
            <h3>Pieces</h3>
            <label>Puzzle Grid Size</label>
            <input type="number" name="numberOfRows" autocomplete="off" value="4" style="width:50px" required="required" /> x
            <input type="number" name="numberOfColumns" autocomplete="off" value="4" style="width:50px" required="required" />
            @*<br />
            <input type="button" id="previewCut" value="Preview Cut" />*@
        </div>

        <div class="form-group col-md-2">
            <h3>Name</h3>
            <label>Title</label>
            <input type="text" id="title" name="title" autocomplete="off" required="required" />
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-3">
            <h3>Advanced Settings</h3>
            <label>Display Preview</label>
            <input asp-for="DisplayPreview" value="true" checked="checked" />
            <br />
            <label>Mute Video</label>
            <input asp-for="IsMuted" value="true" checked="checked" />
            @*<h3>Players</h3>
            Max Players?
            Private vs Public?
            <h3>Restrictions</h3>
            Limit # of snaps per user?
            <h3>Misc</h3>
            Celebration Type*@
        </div>
        <div class="form-group col-md-1" style="text-align:center;position:relative;">
            <input type="submit" value="Create" id="createButton"
                   style="position: absolute;top: 40%;left: 25%;" />
        </div>
        <div class="form-group col-md-2">
        </div>
    </div>
</form>

@section scripts {
    <script src="~/js/New.js"></script>
}